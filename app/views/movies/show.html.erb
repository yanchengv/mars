<ul class="media-list">
  <li class="media">
    <a class="media-left" href="/movies/<%= @movie.id %>">
      <div>
        <img src="http://tu.joy3g.com/20161009195825431.jpg" alt="..." height="250">
      </div>
    </a>

    <div class="media-body">
      <h4 class="media-heading"><a style="cursor:pointer" href="/movies/<%= @movie.id %>"><%= @movie.name %></a></h4>

      <p>上映：<%= @movie.show_time.strftime('%Y') %></p>

      <p>类型：<%= @movie.movie_tag %></p>

      <p>主演：<%= @movie.actors %></p>

      <p>地区：<%= @movie.region %></p>

      <p>更新日期：<%= @movie.created_at.strftime('%Y-%m-%d %H:%M:%S') %></p>

      <p>影片评分：<%= @movie.grade %></p>
    </div>
  </li>
  <hr>
  <p><%= @movie.abstract %></p>

</ul>

<% if !@movie.movie_details.empty? %>

    <div class="panel panel-primary">
      <!-- Default panel contents -->
      <div class="panel-heading">资源下载地址1</div>
      <div class="panel-body">
        <p><strong><% @movie.name%></strong> 复制链接到迅雷下载</p>
      </div>
      <!-- List group -->
      <ul class="list-group">
        <% @movie.movie_details.each do |movie_detail| %>
            <li class="list-group-item">
              <a href="<%= movie_detail.url%>"><% @movie.name%>第<%= movie_detail.episode%>集下载---右键复制链接迅雷下载</a>
            </li>
        <% end %>

      </ul>


    </div>

<% end %>
