<ul class="media-list">
  <% @movies.each do |movie| %>
      <li class="media">
        <a class="media-left" href="/movies/<%= movie.id%>">
          <div>
            <img src="<%= movie.image_url%>" alt="..." height="80px" width="60px">
          </div>
        </a>

        <div class="media-body">
          <h4 class="media-heading"><a style="cursor:pointer" href="/movies/<%= movie.id%>"><%= movie.name %></a></h4>

          <p><%= movie.abstract[0, 50] %>...</p>

          <p class="movie_details_span">
            <span>类型：<a href="#">动作片</a></span>
            <span>地区：<a href="#">大陆</a></span>
            <span>评分：5.6</span>
            <span>时间：2016</span>
            <span>主演：<%= movie.actors[0, 20] %>...</span>
            <span>发布时间：2016</span>
          </p>
        </div>


      </li>
      <hr>
  <% end %>
</ul>

<div class="flickr_pagination">
  <%= will_paginate @movies, :container => false,:previous_label => t("上一页"), :next_label => t("下一页") %>
</div>