<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">添加</h3>
  </div>
  <div class="panel-body">
    <form action="/admin_movies" method="post">
      <div class="modal-body">

        <div class="form-group row">
          <label for="example-text-input" class="col-xs-2 col-form-label">名称</label>
          <div class="col-xs-10">
            <input class="form-control" type="text" name="name" id="update_movie_name" placeholder="名称">
          </div>
        </div>

        <div class="form-group row">
          <label for="example-text-input" class="col-xs-2 col-form-label">地区</label>
          <% @movie_regions.each do |region| %>
              <% if region.name != '全部' %>
                  <label class="radio-inline">
                        <input type="radio" name="region" id="add_movie_region<%= region.id %>" value="<%= region.name %>"> <%= region.name %>
                  </label>
              <% end %>
          <% end %>
        </div>

        <div class="form-group row">
          <label for="example-text-input" class="col-xs-2 col-form-label">电影类型</label>
          <% @movie_types.each do |type| %>
              <% if type.name != '全部' %>
                  <label class="radio-inline">
                        <input type="radio" name="movie_type" id="add_movie_type<%= type.id %>" value="<%= type.name %>"> <%= type.name %>
                  </label>
              <% end %>
          <% end %>

        </div>

        <div class="form-group row">
          <label for="example-text-input" class="col-xs-2 col-form-label">电影标签</label>
          <% @movie_tags.each do |tag| %>
              <% if tag.name != '全部' %>
                  <label class="checkbox-inline">
                        <input type="checkbox" id="movie_tag<%= tag.id %>" name="movie_tags[]" value="<%= tag.name %>"> <%= tag.name %>
                  </label>
              <% end %>

          <% end %>

        </div>


        <div class="form-group row">
          <label for="example-text-input" class="col-xs-2 col-form-label">演员</label>

          <div class="col-xs-10">
            <input class="form-control" type="text" name="actors" id="update_movie_actors" placeholder="演员" >
          </div>
        </div>
        <div class="form-group row">
          <label for="example-text-input" class="col-xs-2 col-form-label">简介</label>

          <div class="col-xs-10">
            <textarea class="form-control" rows="3" name="abstract" id="update_movie_abstract" placeholder="简介"></textarea>
          </div>
        </div>
        <div class="form-group row">
          <label for="example-text-input" class="col-xs-2 col-form-label">image_url</label>

          <div class="col-xs-10">
            <input class="form-control" type="text" name="image_url" id="update_movie_image_url" placeholder="image_url" >
          </div>
        </div>
        <div class="form-group row">
          <label for="example-text-input" class="col-xs-2 col-form-label">上映时间</label>

          <div class="col-xs-10">
            <input class="form-control" type="date" name="show_time" id="update_movie_show_time" placeholder="上映时间" >
          </div>
        </div>


        <div class="form-group row">
          <label for="example-text-input" class="col-xs-2 col-form-label">集数</label>

          <div class="col-xs-10">
            <input class="form-control" type="text" name="number" id="update_movie_number" placeholder="集数" >
          </div>
        </div>


        <div class="form-group row">
          <label for="example-text-input" class="col-xs-2 col-form-label">排行</label>

          <div class="col-xs-10">
            <input class="form-control" type="number" name="sort" id="update_movie_sort" placeholder="排行" >
          </div>
        </div>

        <div class="form-group row">
          <label for="example-text-input" class="col-xs-2 col-form-label">评分</label>

          <div class="col-xs-10">
            <input class="form-control" type="number" name="grade" id="update_movie_grade" placeholder="评分" >
          </div>
        </div>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" onclick="pageRefresh()">取消</button>
        <button type="submit" class="btn btn-primary">保存</button>
      </div>
    </form>
  </div>
</div>

