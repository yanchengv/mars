<!-- addMovieModal -->
<div class="modal fade" id="add_movie_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">添加电影</h4>
      </div>

      <form action="/admin_movies" method="post">
        <div class="modal-body">

          <div class="form-group row">
            <label for="example-text-input" class="col-xs-2 col-form-label">名称</label>

            <div class="col-xs-10">
              <input class="form-control" type="text" name="name" placeholder="名称">
            </div>
          </div>

          <div class="form-group row">
            <label for="example-text-input" class="col-xs-2 col-form-label">地区</label>
            <% @movie_regions.each do |region| %>
                <% if region.name != '全部' %>
                    <label class="radio-inline">
                      <input type="radio" name="region" id="add_movie_region<%= region.id %>" value="<%= region.name %>"> <%= region.name %>
                    </label>
                <% end %>
            <% end %>
          </div>

          <div class="form-group row">
            <label for="example-text-input" class="col-xs-2 col-form-label">电影类型</label>
            <% @movie_types.each do |type| %>
                <% if type.name != '全部' %>
                    <label class="radio-inline">
                      <input type="radio" name="movie_type" id="add_movie_type<%= type.id %>" value="<%= type.name %>"> <%= type.name %>
                    </label>
                <% end %>
            <% end %>


          </div>


          <div class="form-group row">
            <label for="example-text-input" class="col-xs-2 col-form-label">电影标签</label>
            <% @movie_tags.each do |tag| %>
                <% if tag.name != '全部' %>
                    <label class="checkbox-inline">
                      <input type="checkbox" id="movie_tag<%= tag.id %>" name="movie_tag" value="<%= tag.name %>"> <%= tag.name %>
                    </label>
                <% end %>

            <% end %>


          </div>


          <div class="form-group row">
            <label for="example-text-input" class="col-xs-2 col-form-label">演员</label>

            <div class="col-xs-10">
              <input class="form-control" type="text" name="actors" placeholder="演员">
            </div>
          </div>
          <div class="form-group row">
            <label for="example-text-input" class="col-xs-2 col-form-label">简介</label>

            <div class="col-xs-10">
              <textarea class="form-control" rows="3" name="abstract" placeholder="简介"></textarea>
            </div>
          </div>
          <div class="form-group row">
            <label for="example-text-input" class="col-xs-2 col-form-label">image_url</label>

            <div class="col-xs-10">
              <input class="form-control" type="text" name="image_url" placeholder="image_url">
            </div>
          </div>
          <div class="form-group row">
            <label for="example-text-input" class="col-xs-2 col-form-label">上映时间</label>

            <div class="col-xs-10">
              <input class="form-control" type="date" name="show_time" placeholder="上映时间">
            </div>
          </div>

          <div class="row">
            <div class="col-xs-2">
              集数：<input class="form-control" type="text" name="number" placeholder="集数">
            </div>
            <div class="col-xs-3">
              排行：<input class="form-control" type="number" name="sort" placeholder="排行">
            </div>
            <div class="col-xs-4">
              评分：<input class="form-control" type="number" name="grade" placeholder="评分">
            </div>
          </div>


        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
          <button type="submit" class="btn btn-primary">保存</button>
        </div>
      </form>

    </div>
  </div>
</div>

