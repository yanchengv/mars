<%= render partial: 'sessions/alert_danger'%>
<div class="container">
  <form class="form-signin" action="/sign_up" method="post">
    <!--<h3 class="form-signin-heading">登陆</h3>-->
    <label for="inputEmail">用户名</label>
    <input type="text" id="inputEmail" name="name" class="form-control" placeholder="用户名" required autofocus>
    <label for="inputPassword">邮箱</label>
    <input type="email" class="form-control" name="email"  placeholder="邮箱" required>
    <label for="inputPassword">密码</label>
    <input type="password" id="inputPassword" name="password" class="form-control" placeholder="密码" required>
    <label for="inputPassword">确认密码</label>
    <input type="password" class="form-control"  name="password_confirmation" placeholder="确认密码" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">注册</button>
  </form>

</div> <!-- /container -->

