<link rel="stylesheet" href="//cdn.jsdelivr.net/editor/0.1.0/editor.css">
<script src="//cdn.jsdelivr.net/editor/0.1.0/editor.js"></script>
<script src="//cdn.jsdelivr.net/editor/0.1.0/marked.js"></script>
<%= render partial: 'admin_books/book_menu_list' %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">添加</h3>
  </div>
  <div class="panel-body">
    <form action="/admin_books/create_book_detail" method="post">
      <div class="modal-body">
        <div align="center" style="margin-bottom: 10px">
          <button type="button" class="btn btn-default" data-dismiss="modal" onclick="pageRefresh()">取消</button>
          <button type="submit" class="btn btn-primary">保存</button>
        </div>

        <input class="form-control" type="hidden" name="book_menu_id"  value="<%= @book_menu_id%>">
        <input class="form-control" type="hidden" name="book_id"  value="<%= @book.id%>">
        <input class="form-control" type="hidden" name="book_type"  value="<%= @book.book_type%>">
        <div class="form-group row">
          <label for="example-text-input" class="col-xs-1 col-form-label">标题名称</label>
          <div class="col-xs-10">
            <input class="form-control" type="text" name="name" id="book_detail_name" value="<%= @book_menu_name%>"  placeholder="标题名称">
          </div>
        </div>

        <div class="form-group row">
          <label for="example-text-input" class="col-xs-1 col-form-label">内容</label>
          <div class="col-xs-10">
            <textarea class="form-control" rows="100" name="content" id="book_detail_content" placeholder="内容"><%= @book_detail_content%></textarea>
          </div>
        </div>

      </div>

    </form>
  </div>
</div>


<script>
    var editor = new Editor();
    editor.render();
</script>

