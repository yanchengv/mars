<div class="row">

  <div class="col-sm-12 blog-main">
    <div class="blog-post">
      <h2 class="blog-post-title " style="text-align:center;"><%= @admin_news.title%></h2>
      <p class="blog-post-meta" style="text-align:center;"><%= @admin_news.created_at.strftime('%Y-%m-%d %H:%M')%> by <a href="#"><%= @admin_news.author%></a></p>

      <%= @admin_news.content.present? ? @admin_news.content.html_safe : '暂无内容，欢迎时刻关注扒新闻！'%>
    </div>
    <!-- /.blog-post -->

  </div>
  <!-- /.blog-main -->


</div><!-- /.row -->