<div class="panel panel-default">
  <div class="panel-body">
    <a href="/admin_news/new">添加新闻</a>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>#ID</th>
      <th>标题</th>
      <th>作者</th>
      <th>上传时间</th>
      <th>操作</th>
    </tr>
    </thead>

    <tbody>
    <% if @admin_news.present? %>
        <% @admin_news.each do |news| %>
            <tr>
              <td><%= news.id %></td>
              <td><%= news.title %></td>
              <td><%= news.author %></td>
              <td><%= news.created_at.present? ? news.created_at.strftime('%Y-%m-%d') : '暂无' %></td>
              <td><a href="/admin_news/<%= news.id%>">详情</a>
                <a href="/admin_news/<%= news.id%>/edit">修改</a>
                <a href="javascript:void(0)" onclick="deleteNews(<%= news.id%>,'<%= news.title%>')">删除</a>
              </td>
            </tr>
        <% end %>

    <% end %>
    </tbody>
  </table>
</div>
<div class="flickr_pagination">
  <%= will_paginate @admin_news, :container => false,:previous_label => t("上一页"), :next_label => t("下一页") %>
</div>

<%= render partial: 'admin_news/news_modal'%>